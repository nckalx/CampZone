<% include ../partials/header %>

<div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit <%= user.username %>'s Profile</h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/users/<%= user._id %>/?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control" type="text" name="user[username]" value="<%= user.username %>"> 
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" name="user[email]" value="<%= user.email %>"> 
                </div>
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>"> 
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>"> 
                </div>
                <div class="form-group">
                    <label for="avatar">Avatar Url</label>
                    <input type="file" id="avatar" name="avatar" accept="image/*">
                </div>                
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="user[description]" value="<%= user.description %>">
                </div>
                <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
            </form>
            <a href="/users/<%= user._id %>">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>